.container {
  background-size: 100% 100%;
  font-size: 24rpx;
  height: auto;
  min-height: 100vh;
}

.container-nav {
  width: 100%;
  padding-top: 60rpx;
  box-sizing: content-box;
  border-bottom: 2rpx solid #717171;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  background: rgba(33, 24, 13, 1);
}

.container-nav .underline {
  height: 0;
  border-bottom: 2rpx solid #ddb67a;
  width: 50%;
  position: absolute;
  bottom: 0;
  transition: all 0.3s;
}

.nav-item {
  color: #645239;
  width: 50%;
  text-align: center;
  transition: all 0.3s;
  padding-bottom: 25rpx;
}

.nav-item.active {
  color: #a98d63;
}

.recommend-list {
  /* 60+25+32 */
  margin-top: 117rpx;
  padding-top: 25rpx;
  padding-bottom: 60rpx;
}

.items:last-child .recommend-item {
  margin-bottom: 0;
}

