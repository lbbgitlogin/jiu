/* pages/views/share/share.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 385rpx;
}
#box {
  width: 100%;
  height: 100%;
  position: relative;
}
#box image{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
}

.title {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  padding-top: 60rpx;
}

.title view {
  color: #fff;
  padding-bottom: 20rpx;
}

.title {
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8) 0%,rgba(0, 0, 0, 0.5) 50%,  rgba(0, 0, 0, 0) 100%);
}

.inner {
  position: relative;
  padding-bottom: 50rpx;
  padding-top: 75rpx;
  text-align: center;
}

.head {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 0;
  transform: translateY(-50%);
  width: 150rpx;
  height: 150rpx;
}

.text {
  color: #000;
  padding: 20rpx 0;
}

.txt {
  color: #4f4f4f;
  line-height: 1.5em;
}

.bottom-box {
  width: 100%;
  position: fixed;
  left: 0;
  bottom:0;
  padding-bottom: 60rpx;
  background-color: #fff;
}

.btn-box {
  padding: 0 56rpx;
}

.bottom {
  width: 100%;
  position: relative;
}

.bottom-sham {
  height: 200rpx;
  width: 90%;
}

.bottom .line {
  height: 1px;
  margin-top: 0rpx;
  margin-bottom: 25rpx;
  width: 100%;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.2) 10%, rgba(0, 0, 0, 0.4) 20%, rgba(0, 0, 0, 0.6) 30%, rgba(0, 0, 0, 0.8) 40%, rgba(0, 0, 0, 1) 50%, rgba(0, 0, 0, 0.8) 60%, rgba(0, 0, 0, 0.6) 70%, rgba(0, 0, 0, 0.4) 80%, rgba(0, 0, 0, 0.2) 90%, rgba(0, 0, 0, 0.1) 100%);
}

.bottom .emption {
  text-align: center;
}
