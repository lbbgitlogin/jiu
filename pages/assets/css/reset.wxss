/* 一屏式大盒子 */

.content {
  padding: 60rpx 0;
  width: 100%;
}

/* 规范宽度 */

.container {
  padding: 0 56rpx;
}

.containers {
  width: 100%;
  padding: 0 56rpx;
}

/* 渐变背景 */

.b-b {
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.9));
}

/* 箭头>居中之类 */

.icon-box {
  position: relative;
  display: inline-block;
}

.icon-box .txt {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto 0;
  right: -22rpx;
  z-index: 10;
}

/* 分享的css */

.share {
  position: absolute;
  right: 0;
  top: 60rpx;
  z-index: 2;
  width: 40rpx;
  display: flex;
  align-items: top;
  height: 50rpx;
  background-color: transparent;
  padding: 0;
  margin-right: 56rpx;
  overflow: hidden;
  border: none;
}

.share image {
  width: 40rpx;
  height: 40rpx;
  left: 0;
  right: 0;
}

.share::after {
  border: 0;
}

