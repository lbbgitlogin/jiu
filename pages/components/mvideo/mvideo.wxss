.cover {
  position: relative;
}
.cover .play {
  position: absolute;
  width: 126rpx;
  height: 126rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transform-origin: 50% 50%;
}
.video-modal {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
}
.video-modal .video {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.video-modal  .close {
  position: absolute;
  right: 0;
  top: 0;
  width: 50px;
  height: 70rpx;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
}
.video-modal .close .back {
  width: 32rpx;
  height: 37rpx;
  transform: rotate(180deg);
  transition: opacity 0.5s;
}
.video-modal  .close .back.hide {
  opacity: 0;
}